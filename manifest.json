{
  "manifest_version": 3,
  "name": "Joyful Moments Viewer",
  "version": "1.0",
  "description": "Relive your joyful moments with a beautiful gallery of images.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
