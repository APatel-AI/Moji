{
  "manifest_version": 3,
  "name": "Image Grid Viewer",
  "version": "1.1",
  "description": "Select images from your laptop and view them in a beautiful grid.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Image Grid Viewer"
  },
  "permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["heic2any.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
